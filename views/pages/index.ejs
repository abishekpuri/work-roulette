<!DOCTYPE html>
<title> Work Roulette </title>
<header>
  <!-- Importing JQuery and Bootstrap -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

  <script src="scripts/roulette.js"></script>
  <link rel="stylesheet" type="text/css" href="css/index.css">
</header>
<body>
  <h1> Work Roulette </h1>
  <h1> Your ID is : <span id="userID"></span> </h1>
  <div id='tasks'>
    <select id="activityType" onchange="adjustBoxes();">
        <option value="Task">Task</option>
        <option value="Meeting">Meeting</option>
    </select>
    <input type='text' id='category' placeholder='Category'></input>
    <input type='text' id='task' placeholder='Task'></input>
    <input type='datetime-local' id='meetingTime'>
    <input type='int'  id='hours' placeholder='Estimated Time (Hrs)'></input>
    <select id="priority">
      <option value = "1"> 1 - Highest Priority </option>
      <option value = "2"> 2 </option>
      <option value = "3"> 3 </option>
      <option value = "4"> 4 </option>
      <option value = "5"> 5 - Lowest Priority </option>
    </select>
    <button class="btn btn-xs" id='addList' onclick='addToList()'>Add To List</button>
    <div id="TaskButtons" style="padding-top:10px">
    <button type="button" class="btn btn-link" data-toggle="collapse" data-target="#taskList"> All Tasks </button>
    <button class="btn btn-info" id='sortByPriority' onclick='sortByPriority()'> Sort by Priority </button>
    <button class="btn btn-info" id='sortByCategory' onclick='sortByCategory()'> Sort by Category </button>
  </div>
    <ul id='taskList' class="collapse">
    </ul>
  </div>
  <div id="timeLeft">
    <h1> Total Hours of Work Done: </h1>
    <h2 id="hoursDone"> 0 Hours </h2>
    <h1> Estimated Time to Complete Work (Hrs): </h1>
    <h2 id="estimatedTime"></h2>
  </div>
  <div id='roulette'>
    <button id='startRoulette' onclick='startRoulette()'> Start The Roulette! </button>
    <h1 id='currentTask'></h1><br>
    <h1 id='pointsAvailable'></h1>
    <button id='completed' onclick='completedTask()'> Finished the Task! </button>
  </div>
  <div id="userData">
    <h1> All User Stats </h1>
    <h3>Points Earnt : </h3>
    <p id='totalPoints'>0</p>
    <h3>Completed Activities List </h3>
    <ul id='completedTasks'>
    </ul>
    <div id="dialogBox">

    </div>
    <div id="rewards">
      <button id='reward1' data-popup-open='popup-1'> Click for half hour break (12 Points) </button>
    </div>
    <button id='retrieve' onclick='retrieveData()'> Retrieve your information </button>
  </div>
  <%- include popups.ejs %>
</body>
</html>
